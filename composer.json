{
    "name": "hynek/hynek-module-tools",
    "description": "A set of tools to help you build Hynek modules.",
    "keywords": [
        "hynek",
        "laravel",
        "module",
        "tools"
    ],
    "license": "MIT",
    "version": "dev-main",
    "authors": [
        {
            "name": "Henric SÃ¶derlind",
            "email": "henric.soderlind@outlook.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.9"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^7.7|^8.0|^9.0|^10.0",
        "pestphp/pest": "^1.23|^2.1|^3.1",
        "phpunit/php-code-coverage": "^9.0|^10.0|^11.0",
        "phpunit/phpunit": "^9.5.24|^10.5|^11.5",
        "spatie/pest-plugin-test-time": "^1.1|^2.2"
    },
    "autoload": {
        "psr-4": {
            "Hynek\\HynekModuleTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hynek\\HynekModuleTools\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "php -d auto_prepend_file=tests/Prepend.php vendor/bin/pest --colors=always",
        "test-coverage": "@test --coverage",
        "test-dirty": "@test --dirty --compact"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "prefer-stable": true
}
